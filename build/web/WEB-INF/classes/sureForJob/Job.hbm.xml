<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE   hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="sureForJob">
    <class name="Job" table="JobTable">
    <id name="jobId" column="jobId"/>
    <property name="OperatorId" column="OperatorId"/>
    <property name="userName" column="userName"/>
    <property name="email" column="email"/>
    <property name="contact" column="contact"/>
    <property name="jobInfo" column="jobInfo"/>
    <property name="jobMode" column="jobMode"/>
    <property name="workDeadline" column="workDeadline"/>
    <property name="amount" column="amount"/>
    <property name="termsAndCondition" column="termsAndCondition"/>
    </class>
</hibernate-mapping>